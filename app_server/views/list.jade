include _includes/helper_functions.jade
extends layout

block content
  .container
    .row
      .panel.panel-primary
        .panel-heading
          .panel-title List View
        .panel-body
          table.table
            thead
              tr
                th#check Finished?
                th#taskname Task Name
                th#details
                  .pull-right Details
            tbody
              each task in tasks
                -var contextualClass=''
                -if(task.completed){contextualClass='finished'}
                tr(class=contextualClass id='#{task._id}')
                  td
                    form(action="/updatecompleted/", method="post", role="form")
                      input(type='checkbox', checked=task.completed, name='box_name' value="#{task._id}").completed-box
                  td= task.name
                    -if(task.flagged)
                      span.pull-right.glyphicon.glyphicon-fire
                  td
                    a(href="/details/"+'#{task._id}')
                      .pull-right View/Edit Details
              tr.form-row
                form(action="/create", method="post", role="form").checkforname#newtaskform
                  td
                  td
                    input(type='text' value='New Task' name="name" autocomplete='off' autofocus)#newtask
                  td 
                    button.btn-primary.pull-right Add New Task
          -if(!show_completed)
            form(action="/", method="get", role="form")
              button(name='show_completed', value=1).btn-primary Show Completed Tasks
          -else
            form(action="/", method="get", role="form")
              button(name='show_completed', value=0).btn-primary Hide Completed Tasks
            | <br />
            form(action="/deletecompleted", method="post", role="form")
              button.btn-danger.pull-right
                .i.glyphicon.glyphicon-trash
                | &nbsp;Delete Completed Tasks  
      -if(message)
        .container
          .row
            .col-xs-4.pagination-centered
              .alert.alert-warning
                h4
                  .glyphicon.glyphicon-exclamation-sign 
                  |&nbsp;&nbsp;#{message}