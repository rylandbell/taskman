mixin simplifyDate(date)
  -var year=date.getYear()+1900;
  -var month=date.getMonth()+1;
  -var day=date.getDate();
  -if (month<10){month='0'+month}
  -if (day<10){day='0'+month}
  -var outputDate = year+'-'+month+'-'+day;
  -console.log(outputDate);
  =outputDate

mixin getYear(date)
  =date.getYear()

mixin getDatenumber(date)
  =date.getDate()

mixin getMonth(date)
  =date.getMonth()+1