extends layout

block content
  form.form(action="/login", method="post", role="form")
    .form-group
      label Username: &nbsp;
      input.form-control(type="text" name="email" value="toast@wedding.org")
    .form-group
      label Password: &nbsp;
      input.form-control(type="password" name="password" value="robb")
    button.btn.btn-default(type='submit') Submit
  -if(message)
    .alert.alert-warning= message