doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/vendor/bootstrap/css/flatly.bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container.container-body
      nav.navbar.navbar-default.navbar-fixed-top
        .container.container-navbar
          // Brand and toggle get grouped for better mobile display
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') TaskMan Home
          // Collect the nav links, forms, and other content for toggling
          .collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              -if (userName) 
                li.dropdown
                  a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')= userName
                    span.caret
                  ul.dropdown-menu
                    li#logout
                      a(href='/login') Sign Out
              //- -else
              //-   li
              //-     a(href='/login') Sign In
      .container-fluid
        -if  (error==='validation')
          .alert.alert-danger 
            strong Validation Error:
            |&nbsp; Please enter a name for your task.
        block content
        footer 
          .row
            .col-xs-12
              .pull-right 
                small &copy; RPB 2016
 
    script(src='/vendor/jquery-1.11.1.min.js')
    script(src='/vendor/bootstrap/js/bootstrap.min.js')
    script(src='/vendor/modernizr.js')
    block scripts
